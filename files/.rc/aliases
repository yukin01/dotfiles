# vim:filetype=sh
alias brewdump='brew bundle dump --force --formula --cask --tap --file ~/dotfiles/Brewfile'
alias brewbundle='brew bundle --file ~/dotfiles/Brewfile'
alias brewcleanup='brew bundle --cleanup --file ~/dotfiles/Brewfile'
alias zshtime='for i in $(seq 1 10); do time zsh -i -c exit; done'
alias zshprof='ENABLE_ZSH_PROFILING=1 zsh -i -c "zprof | less"'
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'
alias ls='ls -G'
alias ..='cd ..'
alias k='kubectl'
alias a='aws-vault'
alias c='clear'
alias t='terraform'
alias g='git'
alias dotfiles='tmux attach -c ~/dotfiles -t dotfiles || tmux new -c ~/dotfiles -s dotfiles \; source-file ~/.tmux/dotfiles.conf'
alias tfi='terraform init'
alias tfiu='terraform init -upgrade'
alias tfv='terraform validate'
alias tff='terraform fmt -recursive'
alias tfp='terraform plan'
alias ghp='gh pr create -w'
